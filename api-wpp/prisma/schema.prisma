model SendMessage {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  clientId    String
  phoneNumber String
  message     String
  contactName String
  client      Client   @relation(fields: [clientId], references: [id])

  @@map("send_messages")
}

model Client {
  id       String        @id @default(uuid())
  name     String
  number   String
  session  String
  messages SendMessage[]

  @@map("clients")
}

model UserState {
  id        String   @id @default(uuid())
  userId    String   @unique // Tornando userId Ãºnico
  name      String?
  email     String?
  stage     String
  createdAt DateTime @default(now())

  @@map("user_states")
}

model Message {
  id      String @id @default(uuid())
  message String

  @@map("message")
}

model Group{
  id String @id @default(uuid())
  group_name String
  user String

  @@map("whatsapp_group")
}